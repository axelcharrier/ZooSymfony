{% extends 'base.html.twig' %}

{% block title %}Espace index{% endblock %}

{% block body %}
    <h1>Espaces</h1>

    {% for messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-danger">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}
    <div class="row w-100">
        {% for espace in espaces %}
            <div class="card m-2" style="width: 18rem;">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <h5 class="card-title">{{ espace.nom }}</h5>
                        <p class="test-secondary">{{ espace.superficie }} m2</p>
                    </div>
                    <div class="d-flex">
                        <a href="{{ path("app_espace_show", {id:espace.id}) }}" class="btn btn-primary"><i
                                class="fa-solid fa-circle-info"></i></a>
                        <a href="{{ path("app_espace_edit", {id:espace.id}) }}" class="btn btn-success"><i
                                class="fa-solid fa-pen-to-square"></i></a>
                        {{ include('espace/_delete_form.html.twig') }}
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
    <a class="btn btn-primary m-1" href="{{ path('app_espace_new') }}">Create new</a>
{% endblock %}

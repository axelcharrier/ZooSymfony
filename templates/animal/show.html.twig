{% extends 'base.html.twig' %}

{% block title %}Animal{% endblock %}

{% block body %}
    <h1>Animal</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ animal.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ animal.nom }}</td>
            </tr>
            <tr>
                <th>Date_naissance</th>
                <td>{{ animal.dateNaissance ? animal.dateNaissance|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Date_arrive</th>
                <td>{{ animal.dateArrive ? animal.dateArrive|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Date_depart</th>
                <td>{{ animal.dateDepart ? animal.dateDepart|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Genre</th>
                <td>{{ animal.genre }}</td>
            </tr>
            <tr>
                <th>Espece</th>
                <td>{{ animal.espece }}</td>
            </tr>
            <tr>
                <th>Sterilise</th>
                <td>{{ animal.sterilise ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Quarantaine</th>
                <td>{{ animal.quarantaine ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_animal_index') }}">back to list</a>

    <a href="{{ path('app_animal_edit', {'id': animal.id}) }}">edit</a>

    {{ include('animal/_delete_form.html.twig') }}
{% endblock %}

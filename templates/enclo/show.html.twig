{% extends 'base.html.twig' %}

{% block title %}Enclo{% endblock %}

{% block body %}
    <h1>Enclo</h1>

    <div class="row">
        {% for animal in animals %}
            <div class="card m-2" style="width: 18rem;">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <h5 class="card-title">{{ animal.nom }}</h5>
                        <p class="test-secondary">{{ animal.espece }}</p>
                    </div>
                    <a href="{{ path("app_animal_show", {id:animal.id}) }}" class="btn btn-primary"><i
                            class="fa-solid fa-circle-info"></i></a>
                    <a href="{{ path("app_animal_edit", {id:animal.id}) }}" class="btn btn-success"><i
                            class="fa-solid fa-pen-to-square"></i></a>
                    <a href="{{ path("app_animal_delete", {id:animal.id}) }}" class="btn btn-danger"><i
                            class="fa-solid fa-trash"></i></a>
                </div>
            </div>
        {% endfor %}
    </div>
    <div class="d-flex justify-content-start w-100">

        {{ include('enclo/_delete_form.html.twig') }}
    </div>
{% endblock %}
